@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Primary color - Pink to Purple Gradient (#E91E63 to #9C27B0) */
  --primary-50: #fce4ec;
  --primary-100: #f8bbd0;
  --primary-200: #f48fb1;
  --primary-300: #f06292;
  --primary-400: #ec407a;
  --primary-500: #E91E63;
  --primary-600: #d81b60;
  --primary-700: #c2185b;
  --primary-800: #ad1457;
  --primary-900: #880e4f;
  --primary-950: #560027;
  
  /* Background colors */
  --background: #F8F8F8;
  --background-light: #FFFFFF;
  
  /* Text colors */
  --text: #1A1A1A;
  --text-light: #4A4A4A;
  
  /* Danger color - Red */
  --danger-50: #ffebee;
  --danger-100: #ffcdd2;
  --danger-200: #ef9a9a;
  --danger-300: #e57373;
  --danger-400: #ef5350;
  --danger-500: #f44336;
  --danger-600: #e53935;
  --danger-700: #d32f2f;
  --danger-800: #c62828;
  --danger-900: #b71c1c;
  --danger-950: #7f0000;
  
  /* Success color - Green */
  --success-50: #e8f5e9;
  --success-100: #c8e6c9;
  --success-200: #a5d6a7;
  --success-300: #81c784;
  --success-400: #66bb6a;
  --success-500: #4caf50;
  --success-600: #43a047;
  --success-700: #388e3c;
  --success-800: #2e7d32;
  --success-900: #1b5e20;
  --success-950: #0d3010;
  
  /* Warning color - Amber */
  --warning-50: #fff8e1;
  --warning-100: #ffecb3;
  --warning-200: #ffe082;
  --warning-300: #ffd54f;
  --warning-400: #ffca28;
  --warning-500: #ffc107;
  --warning-600: #ffb300;
  --warning-700: #ffa000;
  --warning-800: #ff8f00;
  --warning-900: #ff6f00;
  --warning-950: #c43e00;
  
  /* Neutral color - Gray */
  --neutral-50: #fafafa;
  --neutral-100: #f5f5f5;
  --neutral-200: #eeeeee;
  --neutral-300: #e0e0e0;
  --neutral-400: #bdbdbd;
  --neutral-500: #9e9e9e;
  --neutral-600: #757575;
  --neutral-700: #616161;
  --neutral-800: #424242;
  --neutral-900: #212121;
  --neutral-950: #0a0a0a;
}

body {
  @apply bg-background text-text font-sans;
}

/* Base components */
.btn {
  @apply px-4 py-2 rounded-lg font-medium transition-all duration-200 flex items-center justify-center gap-2;
}

.btn-primary {
  @apply bg-primary-500 text-white hover:bg-primary-600 active:bg-primary-700;
}

.btn-outline {
  @apply border border-primary-500 text-primary-500 hover:bg-primary-50;
}

.btn-danger {
  @apply bg-danger-500 text-white hover:bg-danger-600 active:bg-danger-700;
}

.btn-success {
  @apply bg-success-500 text-white hover:bg-success-600 active:bg-success-700;
}

.btn-gradient {
  @apply bg-gradient-primary text-white hover:shadow-md active:opacity-90;
}

/* Input styles */
.input {
  @apply px-4 py-2 rounded-lg border border-neutral-300 bg-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200;
}

/* Card styles with neumorphic elements */
.card {
  @apply bg-background-light rounded-xl p-4 shadow-md;
}

.card-neumorphic {
  @apply bg-background rounded-xl p-4 shadow-neumorphic;
}

/* Task item */
.task-item {
  @apply flex items-center gap-3 p-3 rounded-lg hover:bg-neutral-100 transition-all duration-200;
}

.task-item-completed {
  @apply opacity-70;
}

/* Checkbox custom styling */
.checkbox {
  @apply h-5 w-5 rounded border-2 border-neutral-300 checked:bg-primary-500 checked:border-primary-500 focus:ring-primary-500 focus:ring-offset-0 transition-all duration-200;
}

/* Priority indicators */
.priority-high {
  @apply bg-danger-100 text-danger-700 px-2 py-0.5 rounded text-xs font-medium;
}

.priority-medium {
  @apply bg-warning-100 text-warning-700 px-2 py-0.5 rounded text-xs font-medium;
}

.priority-low {
  @apply bg-success-100 text-success-700 px-2 py-0.5 rounded text-xs font-medium;
}

/* Category/tag styling */
.tag {
  @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
}

.tag-primary {
  @apply bg-primary-100 text-primary-700;
}

.tag-secondary {
  @apply bg-neutral-100 text-neutral-700;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--neutral-100);
  border-radius: 8px;
}

::-webkit-scrollbar-thumb {
  background: var(--primary-300);
  border-radius: 8px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-400);
}

/* Gradient text */
.text-gradient {
  @apply bg-clip-text text-transparent bg-gradient-primary;
}